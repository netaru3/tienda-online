    <title>Panel de Administraci√≥n</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;600;700&family=Outfit:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #0A0E27;
            --primary-light: #1A1F3A;
            --accent: #00D9FF;
            --accent-secondary: #8A2BE2;
            --accent-glow: rgba(0, 217, 255, 0.3);
            --text: #E8E8E8;
            --text-dim: #A0A0A0;
            --bg: #050816;
            --card-bg: #0F1428;
            --border: rgba(0, 217, 255, 0.2);
            --shadow: rgba(0, 217, 255, 0.1);
            --success: #00FF88;
            --warning: #FFB800;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 217, 255, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(138, 43, 226, 0.08) 0%, transparent 50%);
            animation: drift 20s ease-in-out infinite;
            pointer-events: none;
            z-index: 0;
        }

        @keyframes drift {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(5%, -5%) rotate(5deg); }
            66% { transform: translate(-5%, 5%) rotate(-5deg); }
        }

        /* Header */
        header {
            position: relative;
            z-index: 10;
            padding: 1.5rem 5%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--border);
            backdrop-filter: blur(10px);
            background: rgba(10, 14, 39, 0.9);
            flex-wrap: wrap;
            gap: 1rem;
        }

        .admin-badge {
            display: inline-block;
            padding: 0.3rem 0.8rem;
            background: linear-gradient(135deg, var(--accent), var(--accent-secondary));
            color: var(--primary);
            font-size: 0.75rem;
            font-weight: 600;
            border-radius: 20px;
            margin-left: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .logo {
            font-family: 'Sora', sans-serif;
            font-size: 1.8rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--accent), var(--accent-secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-decoration: none;
            cursor: pointer;
        }

        .header-actions {
            display: flex;
            gap: 0.8rem;
            align-items: center;
            flex-wrap: wrap;
        }

        /* Buttons */
        .btn {
            padding: 0.7rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-family: 'Outfit', sans-serif;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn:active::before {
            width: 300px;
            height: 300px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--accent), #0099CC);
            color: var(--primary);
            box-shadow: 0 4px 15px var(--shadow);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px var(--accent-glow);
        }

        .btn-secondary {
            background: var(--card-bg);
            color: var(--text);
            border: 1px solid var(--border);
        }

        .btn-secondary:hover {
            background: var(--primary-light);
            border-color: var(--accent);
        }

        .btn-success {
            background: linear-gradient(135deg, var(--success), #00CC77);
            color: var(--primary);
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 255, 136, 0.3);
        }

        /* Hero section */
        .hero {
            position: relative;
            z-index: 5;
            padding: 3rem 5%;
            text-align: center;
        }

        .hero-title {
            font-family: 'Sora', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--text), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: fadeInUp 0.8s ease;
        }

        .hero-subtitle {
            color: var(--text-dim);
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
            animation: fadeInUp 0.8s ease 0.1s backwards;
        }

        /* Search container */
        .search-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.8rem;
            margin-top: 1.5rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            animation: fadeInUp 0.8s ease 0.2s backwards;
        }

        #buscador {
            flex: 1;
            padding: 1rem 1.5rem;
            background: var(--card-bg);
            border: 2px solid var(--border);
            border-radius: 50px;
            color: var(--text);
            font-family: 'Outfit', sans-serif;
            font-size: 1rem;
            transition: all 0.3s ease;
            outline: none;
        }

        #buscador:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 4px rgba(0, 217, 255, 0.1);
            background: var(--primary);
        }

        #buscador::placeholder {
            color: var(--text-dim);
        }

        .btn-search {
            padding: 1rem 2rem;
            background: linear-gradient(135deg, var(--accent), #0099CC);
            color: var(--primary);
            border: none;
            border-radius: 50px;
            font-family: 'Outfit', sans-serif;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px var(--shadow);
            white-space: nowrap;
        }

        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px var(--accent-glow);
        }

        .btn-search:active {
            transform: translateY(0);
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Notifications */
        .notifications-panel {
            position: fixed;
            top: 100px;
            right: -400px;
            width: 350px;
            max-height: 500px;
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 1.5rem;
            z-index: 100;
            transition: right 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            overflow-y: auto;
            box-shadow: -5px 5px 30px rgba(0, 0, 0, 0.5);
        }

        .notifications-panel.active {
            right: 20px;
        }

        .notifications-panel::-webkit-scrollbar {
            width: 6px;
        }

        .notifications-panel::-webkit-scrollbar-track {
            background: var(--primary);
        }

        .notifications-panel::-webkit-scrollbar-thumb {
            background: var(--accent);
            border-radius: 3px;
        }

        .notifications-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            padding-bottom: 0.8rem;
            border-bottom: 1px solid var(--border);
        }

        .notifications-title {
            font-family: 'Sora', sans-serif;
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--accent);
        }

        .close-panel-btn {
            background: transparent;
            border: none;
            color: var(--text);
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .close-panel-btn:hover {
            background: var(--primary-light);
            color: var(--accent);
        }

        .notification-item {
            background: var(--primary-light);
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 0.8rem;
            border-left: 3px solid var(--accent);
            animation: slideIn 0.3s ease;
            position: relative;
            padding-right: 3rem;
        }

        .close-notification-btn {
            position: absolute;
            top: 0.8rem;
            right: 0.8rem;
            background: transparent;
            border: none;
            color: var(--text-dim);
            font-size: 1.2rem;
            cursor: pointer;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: all 0.3s ease;
            opacity: 0.6;
        }

        .close-notification-btn:hover {
            background: rgba(255, 68, 68, 0.2);
            color: #FF4444;
            opacity: 1;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideOut {
            from {
                opacity: 1;
                transform: translateX(0);
                max-height: 100px;
                margin-bottom: 0.8rem;
            }
            to {
                opacity: 0;
                transform: translateX(20px);
                max-height: 0;
                margin-bottom: 0;
                padding-top: 0;
                padding-bottom: 0;
            }
        }

        .notification-item.removing {
            animation: slideOut 0.3s ease forwards;
        }

        .empty-notifications {
            text-align: center;
            padding: 2rem;
            color: var(--text-dim);
        }

        /* Products section */
        .products-section {
            position: relative;
            z-index: 5;
            padding: 2rem 5%;
            max-width: 1400px;
            margin: 0 auto;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .section-title {
            font-family: 'Sora', sans-serif;
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text);
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 2rem;
        }

        /* Product card */
        .product-card {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
            position: relative;
            animation: cardAppear 0.5s ease backwards;
        }

        .product-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 12px 40px var(--shadow);
            border-color: var(--accent);
        }

        .product-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent), var(--accent-secondary));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .product-card:hover::before {
            opacity: 1;
        }

        @keyframes cardAppear {
            from {
                opacity: 0;
                transform: scale(0.9) translateY(20px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .product-image-container {
            width: 100%;
            height: 250px;
            overflow: hidden;
            position: relative;
            background: linear-gradient(135deg, var(--primary), var(--primary-light));
        }

        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .product-card:hover .product-image {
            transform: scale(1.15) rotate(2deg);
        }

        .product-body {
            padding: 1.5rem;
        }

        .product-name {
            font-family: 'Sora', sans-serif;
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 0.8rem;
            color: var(--text);
            text-decoration: none;
            display: block;
            transition: color 0.3s ease;
        }

        .product-name:hover {
            color: var(--accent);
        }

        .product-description {
            color: var(--text-dim);
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 1rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-price {
            font-family: 'Sora', sans-serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--accent);
        }

        /* No results message */
        .no-results {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-dim);
            font-size: 1.2rem;
            grid-column: 1 / -1;
        }

        /* Responsive */
        @media (max-width: 968px) {
            header {
                flex-direction: column;
                gap: 1rem;
            }

            .header-actions {
                flex-wrap: wrap;
                justify-content: center;
                width: 100%;
            }

            .hero-title {
                font-size: 2rem;
            }

            .search-container {
                flex-direction: row;
                gap: 0.6rem;
            }

            #buscador {
                padding: 0.9rem 1.2rem;
                font-size: 0.95rem;
            }

            .btn-search {
                padding: 0.9rem 1.5rem;
                font-size: 0.95rem;
            }

            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            }
        }

        @media (max-width: 640px) {
            .search-container {
                flex-direction: column;
                width: 100%;
            }

            .btn-search {
                width: 100%;
            }

            .products-grid {
                grid-template-columns: 1fr;
            }

            .notifications-panel {
                width: 90%;
                right: -100%;
            }

            .notifications-panel.active {
                right: 5%;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="logo-section">
           <a href="/tienda/admin"><div class="logo">ADMIN PANEL</div></a> 
            <span class="admin-badge">Administrador</span>
        </div>
        <div class="header-actions">
            <button onclick="notificaciones()" class="btn btn-secondary">
                üîî Notificaciones
            </button>
            <button onclick="window.location.href='/mensajeria/admin'" class="btn btn-secondary">
                üí¨ Mensajes
            </button>
            <button onclick="productos()" class="btn btn-success">
                ‚ûï Publicar Producto
            </button>
            <button onclick="cerrarsesion()" class="btn btn-secondary">
                üö™ Cerrar Sesi√≥n
            </button>
        </div>
    </header>

    <div class="notifications-panel" id="notificaciones"></div>

    <section class="hero">
        <h1 class="hero-title">Panel de Administraci√≥n</h1>
        <p class="hero-subtitle">Gestiona tus productos y ventas</p>
        
        <div class="search-container">
            <input type="text" id="buscador" placeholder="üîç Buscar productos..." onkeypress="if(event.key === 'Enter') buscador()">
            <button onclick="buscador()" class="btn-search">Buscar</button>
        </div>
    </section>

    <section class="products-section">
        <div class="section-header">
            <h2 class="section-title">Tus Productos</h2>
        </div>
        <div class="products-grid" id="contenedor"></div>
    </section>

    <script type="module">
        // ---------- declaraci√≥n de variables ------------------
        let productos = await fetch("/verproductos").then(res => res.json());
        let i = 0;
        let a = 0;

        let notificaciones1 = await fetch("/notificaciones-vendedor")
            .then(res => res.json());

        // Agregar ID √∫nico a cada notificaci√≥n
        notificaciones1 = notificaciones1.map((notif, index) => ({
            ...notif,
            _uniqueId: `notif-${Date.now()}-${index}`
        }));

        console.log(notificaciones1);

        // ---------- declaraci√≥n de funciones ----------------
        window.removeNotification = async function removeNotification(id) {
           
            const notificationElement = document.querySelector(`[data-notification-id="${id}"]`);
            if (notificationElement) {
                // Agregar animaci√≥n de salida
                notificationElement.classList.add('removing');
                
                // Despu√©s de la animaci√≥n, remover el elemento del DOM
                setTimeout(() => {
                    notificationElement.remove();
                    
                    // Eliminar del array
                    notificaciones1 = notificaciones1.filter(n => n._id !== id);
                    
                    // Si no quedan notificaciones, mostrar estado vac√≠o
                    const remainingNotifications = document.querySelectorAll('.notification-item:not(.removing)');
                    if (remainingNotifications.length === 0) {
                        const div = document.getElementById("notificaciones");
                        div.innerHTML = `
                            <div class="notifications-header">
                                <h3 class="notifications-title">Notificaciones</h3>
                                <button class="close-panel-btn" onclick="closeNotificationsPanel()">√ó</button>
                            </div>
                            <div class="empty-notifications">
                                <p style="font-size: 2rem; margin-bottom: 0.5rem;">üîî</p>
                                <p>No tienes notificaciones</p>
                            </div>
                        `;
                    }
                }, 300);
            } 
            
            await fetch("/borrar-notificacion",{method:"POST",
                headers:{"Content-Type":"application/json"},
                body:JSON.stringify({id:id})
            })
             
        }

        window.closeNotificationsPanel = function closeNotificationsPanel() {
            const div = document.getElementById("notificaciones");
            div.classList.remove('active');
            a = 0;
        }

        window.notificaciones = function notificaciones() {
            const div = document.getElementById("notificaciones");
            
            if (a === 0) {
                div.innerHTML = "";
                
                if (notificaciones1.length === 0) {
                    div.innerHTML = `
                        <div class="notifications-header">
                            <h3 class="notifications-title">Notificaciones</h3>
                            <button class="close-panel-btn" onclick="closeNotificationsPanel()">√ó</button>
                        </div>
                        <div class="empty-notifications">
                            <p style="font-size: 2rem; margin-bottom: 0.5rem;">üîî</p>
                            <p>No tienes notificaciones</p>
                        </div>
                    `;
                } else {
                    let html = `
                        <div class="notifications-header">
                            <h3 class="notifications-title">Notificaciones</h3>
                            <button class="close-panel-btn" onclick="closeNotificationsPanel()">√ó</button>
                        </div>
                    `;
                    
                    notificaciones1.forEach((notificacion) => { if(notificacion.show!==false){
                        html += `
                            <div class="notification-item" data-notification-id="${notificacion._id}">
                                ${notificacion.notificacion}
                                <button class="close-notification-btn" onclick="removeNotification('${notificacion._id}')" title="Eliminar notificaci√≥n">√ó</button>
                            </div>
                        `;
                    }
                        
                    });
                    
                    div.innerHTML = html;
                }
                
                div.classList.add('active');
                a = 1;
            } else {
                closeNotificationsPanel();
            }
        }

        window.buscador = function buscador() {
            const contenedor = document.getElementById("contenedor");
            const searchTerm = document.getElementById("buscador").value.toLowerCase().trim();
            contenedor.innerHTML = "";
            
            if (!searchTerm) {
                // Si el buscador est√° vac√≠o, mostrar todos los productos
                let i = 0;
                while (i <= productos.length) {
                    mostrarproductos(i);
                    i++;
                }
                return;
            }
            
            let z = 0;
            let found = false;
            console.log("productos length:", productos.length);
            
            while (z <= productos.length) {
                console.log(z);
                try {
                    if (productos[z].producto_nombre && 
                        productos[z].producto_nombre.toLowerCase().includes(searchTerm)) {
                        mostrarproductos(z);
                        found = true;
                    }
                } catch(error) {
                    console.log("error:", error);
                }
                z++;
            }
            
            if (!found) {
                contenedor.innerHTML = `
                    <div class="no-results">
                        <p style="font-size: 3rem; margin-bottom: 1rem;">üîç</p>
                        <p>No se encontr√≥ ning√∫n producto con "${document.getElementById("buscador").value}"</p>
                        <button onclick="resetSearch()" class="btn btn-primary" style="margin-top: 1.5rem;">
                            Ver todos los productos
                        </button>
                    </div>
                `;
            }
        }

        window.resetSearch = function resetSearch() {
            document.getElementById("buscador").value = "";
            buscador();
        }

        window.productos = function productos() {
            window.location.href = "/tienda/admin/productos";
        }

        window.cerrarsesion = async function cerrarsesion() {
            await fetch(`/tienda/cerrarsesion`);
            window.location.href = "/data";
        }

        function mostrarproductos(i) {
            if (productos[i].null === false) {
                const contenedor = document.getElementById("contenedor");
                const nombre = productos[i].producto_nombre;
                const precio = productos[i].producto_precio;
                const descripcion = productos[i].producto_descripcion;

                let imagenSrc = `/${productos[i].producto_imagen}`;
                if (productos[i].producto_imagen[0]?.filename) {
                    imagenSrc = `/${productos[i].producto_imagen[0].filename}`;
                }

                contenedor.innerHTML += `
                    <div class="product-card" style="animation-delay: ${i * 0.05}s">
                        <a href="/producto/${encodeURIComponent(nombre)}/${i + 1}">
                            <div class="product-image-container">
                                <img src="${imagenSrc}" alt="${nombre}" class="product-image">
                            </div>
                        </a>
                        <div class="product-body">
                            <a href="/producto/${encodeURIComponent(nombre)}/${i + 1}" class="product-name">
                                ${nombre}
                            </a>
                            <div class="product-description">
                                ${descripcion}
                            </div>
                            <div class="product-price">${precio}</div>
                        </div>
                    </div>
                `;
            }
        }

        // ---------------- codigo ----------------------
        while (i <= productos.length) {
            mostrarproductos(i);
            i++;
        }

        // Close notifications when clicking outside
        document.addEventListener('click', function(e) {
            const panel = document.getElementById('notificaciones');
