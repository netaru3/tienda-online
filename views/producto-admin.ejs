<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Producto - Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;600;700&family=Outfit:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #0A0E27;
            --primary-light: #1A1F3A;
            --accent: #00D9FF;
            --accent-secondary: #8A2BE2;
            --text: #E8E8E8;
            --text-dim: #A0A0A0;
            --bg: #050816;
            --card-bg: #0F1428;
            --border: rgba(0, 217, 255, 0.2);
            --danger: #FF4444;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            position: relative;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 30%, rgba(0, 217, 255, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(138, 43, 226, 0.08) 0%, transparent 50%);
            pointer-events: none;
            z-index: 0;
        }

        .container {
            position: relative;
            z-index: 1;
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 5%;
        }

        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.7rem 1.2rem;
            background: var(--card-bg);
            color: var(--text);
            border: 1px solid var(--border);
            border-radius: 8px;
            text-decoration: none;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: var(--primary-light);
            border-color: var(--accent);
            transform: translateX(-4px);
        }

        .page-header {
            margin-bottom: 2rem;
        }

        .page-title {
            font-family: 'Sora', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--text), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
        }

        .admin-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
        }

        .product-preview {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 2rem;
            position: sticky;
            top: 2rem;
        }

        /* Image gallery styles */
        .product-images-container {
            margin-bottom: 1.5rem;
        }

        .main-image-container {
            width: 100%;
            aspect-ratio: 1;
            overflow: hidden;
            border-radius: 12px;
            margin-bottom: 1rem;
            position: relative;
            background: var(--primary);
        }

        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-image:hover {
            transform: scale(1.05);
        }

        .image-nav {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.5);
            color: var(--text);
            border: 1px solid var(--border);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 10;
        }

        .image-nav:hover {
            background: var(--accent);
            color: var(--primary);
            border-color: var(--accent);
        }

        .image-nav.prev {
            left: 1rem;
        }

        .image-nav.next {
            right: 1rem;
        }

        .image-count {
            position: absolute;
            bottom: 0.5rem;
            right: 0.5rem;
            background: rgba(0, 0, 0, 0.7);
            color: var(--text);
            padding: 0.3rem 0.6rem;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .thumbnails-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(70px, 1fr));
            gap: 0.8rem;
        }

        .thumbnail {
            aspect-ratio: 1;
            border-radius: 8px;
            overflow: hidden;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            position: relative;
        }

        .thumbnail:hover {
            border-color: var(--accent);
            transform: scale(1.05);
        }

        .thumbnail.active {
            border-color: var(--accent);
            box-shadow: 0 0 15px rgba(0, 217, 255, 0.3);
        }

        .thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-name {
            font-family: 'Sora', sans-serif;
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text);
            margin-bottom: 0.5rem;
        }

        .product-price {
            font-size: 1.5rem;
            color: var(--accent);
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .product-desc {
            color: var(--text-dim);
            line-height: 1.6;
            margin-bottom: 1rem;
        }

        .product-stock {
            color: var(--text-dim);
        }

        .edit-panel {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .edit-section {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 1.5rem;
        }

        .section-title {
            font-family: 'Sora', sans-serif;
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--accent);
            margin-bottom: 1rem;
        }

        .input-group {
            display: flex;
            gap: 0.8rem;
            align-items: center;
        }

        .form-input {
            flex: 1;
            padding: 0.9rem 1.2rem;
            background: var(--primary);
            border: 1px solid var(--border);
            border-radius: 8px;
            color: var(--text);
            font-family: 'Outfit', sans-serif;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(0, 217, 255, 0.1);
        }

        .form-input::placeholder {
            color: var(--text-dim);
        }

        .btn {
            padding: 0.9rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-family: 'Outfit', sans-serif;
            font-size: 0.95rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--accent), #0099CC);
            color: var(--primary);
            box-shadow: 0 4px 15px rgba(0, 217, 255, 0.2);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 217, 255, 0.3);
        }

        .btn-danger {
            background: linear-gradient(135deg, var(--danger), #CC0000);
            color: white;
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 68, 68, 0.3);
        }

        .file-upload-section {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
        }

        .file-label {
            font-size: 0.9rem;
            color: var(--text-dim);
        }

        .comments-section {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 2rem;
            margin-top: 2rem;
        }

        .comment {
            background: var(--primary);
            padding: 1.2rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            border-left: 3px solid var(--accent);
        }

        .comment-author {
            font-weight: 600;
            color: var(--accent);
            margin-bottom: 0.5rem;
        }

        .comment-text {
            color: var(--text-dim);
            margin-bottom: 1rem;
        }

        .comment-actions {
            display: flex;
            gap: 0.8rem;
            margin-top: 1rem;
            flex-wrap: wrap;
        }

        .reply {
            margin-top: 0.8rem;
            padding-left: 1.5rem;
            border-left: 2px solid var(--border);
        }

        @media (max-width: 968px) {
            .admin-grid {
                grid-template-columns: 1fr;
            }

            .product-preview {
                position: relative;
                top: 0;
            }

            .thumbnails-container {
                grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/tienda/admin" class="back-btn">‚Üê Volver al panel</a>

        <div class="page-header">
            <h1 class="page-title">Editar Producto</h1>
        </div>

        <div class="admin-grid">
            <!-- Product Preview -->
            <div class="product-preview" id="contenedor"></div>

            <!-- Edit Panel -->
            <div class="edit-panel">
                <!-- Edit Name -->
                <div class="edit-section">
                    <h3 class="section-title">üìù Nombre</h3>
                    <div class="input-group">
                        <input type="text" id="editarnombre" placeholder="Nuevo nombre" class="form-input">
                        <button onclick="enviar()" class="btn btn-primary">Guardar</button>
                    </div>
                </div>

                <!-- Edit Image -->
                <div class="edit-section">
                    <h3 class="section-title">üì∑ Im√°genes</h3>
                    <form action="/editarimagen" method="post" enctype="multipart/form-data" class="file-upload-section">
                        <p class="file-label">Agregar m√°s im√°genes o reemplazar existentes</p>
                        <input type="file" name="editarimagen" id="editarimagen" multiple accept="image/*" class="form-input">
                        <input type="hidden" name="id" value="<%= id %>">
                        <button type="submit" class="btn btn-primary">Actualizar Im√°genes</button>
                    </form>
                </div>

                <!-- Edit Description -->
                <div class="edit-section">
                    <h3 class="section-title">üìÑ Descripci√≥n</h3>
                    <div class="input-group">
                        <input type="text" id="editardescripcion" placeholder="Nueva descripci√≥n" class="form-input">
                        <button onclick="enviardescripcion()" class="btn btn-primary">Guardar</button>
                    </div>
                </div>

                <!-- Edit Price -->
                <div class="edit-section">
                    <h3 class="section-title">üí∞ Precio</h3>
                    <div class="input-group">
                        <input type="text" id="editarprecio" placeholder="Nuevo precio" class="form-input">
                        <button onclick="enviarprecio()" class="btn btn-primary">Guardar</button>
                    </div>
                </div>

                <!-- Edit Stock -->
                <div class="edit-section">
                    <h3 class="section-title">üì¶ Stock</h3>
                    <div class="input-group">
                        <input type="text" id="editarstock" placeholder="Nuevo stock" class="form-input">
                        <button onclick="stock()" class="btn btn-primary">Guardar</button>
                    </div>
                </div>

                <!-- Delete Product -->
                <div class="edit-section">
                    <h3 class="section-title">üóëÔ∏è Eliminar Producto</h3>
                    <button onclick="borrarproducto()" class="btn btn-danger">Eliminar Producto</button>
                </div>
            </div>
        </div>

        <!-- Comments Section -->
        <div class="comments-section">
            <h2 class="section-title">üí¨ Comentarios de Clientes</h2>
            <div id="comentarios"></div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script type="module">
        // ----- declaraciones -----------------------
        let respuestas = [];
        let productos = await fetch("/verproductos").then(res => res.json());
        let id = "<%= id %>";
        let currentImageIndex = 0;
        let productImages = [];

        console.log("id", id)

        // ------------ websocket --------------------
        let socket = io();
        
        socket.on("respuestas", function(respuestasdata) {
            respuestas = respuestasdata;
            console.log(respuestas);
        });

        socket.on("comentarios", async function(comentarios) {
            console.log(comentarios);
            let idinterval = setInterval(() => {
                if (respuestas.length !== 0) {
                    mostrarcomentarios(comentarios);
                    clearInterval(idinterval);
                }
            }, 5);
        });

        // ---------------- funciones de galer√≠a ------------------
        function changeImage(index) {
            currentImageIndex = index;
            const mainImage = document.getElementById('main-image');
            mainImage.src = productImages[index];
            
            // Update image count
            const imageCount = document.getElementById('image-count');
            if (imageCount) {
                imageCount.textContent = `${index + 1}/${productImages.length}`;
            }
            
            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach((thumb, i) => {
                if (i === index) {
                    thumb.classList.add('active');
                } else {
                    thumb.classList.remove('active');
                }
            });
        }

        function nextImage() {
            currentImageIndex = (currentImageIndex + 1) % productImages.length;
            changeImage(currentImageIndex);
        }

        function prevImage() {
            currentImageIndex = (currentImageIndex - 1 + productImages.length) % productImages.length;
            changeImage(currentImageIndex);
        }

        // ---------------- comentarios ------------------
        window.enviarrespuesta = async function enviarrespuesta(usuario, comentario, numrespuesta) {
            let respuesta = await fetch("/respuesta", {
                method: "POST",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({
                    usuario: usuario,
                    comentario: comentario,
                    producto: "<%= nombre %>",
                    producto_id: id,
                    respuesta: document.getElementById(`respuesta${numrespuesta}`).value
                })
            });
        }

        function mostrarcomentarios(comentarios) {
            let i = 0;
            const comentariodiv = document.getElementById("comentarios");
            comentariodiv.innerHTML = "";
            
            for (let comentario of comentarios) {
                if (comentario.producto_id == "<%= id %>") {
                    comentariodiv.innerHTML += `
                        <div class="comment">
                            <div class="comment-author">${comentario.usuario} dice:</div>
                            <div class="comment-text">${comentario.comentario}</div>
                            <div class="comment-actions">
                                <button onclick="window.location.href='/mensajeria/${comentario.usuario}'" class="btn btn-primary">
                                    üí¨ Contactar
                                </button>
                                <input type="text" id="respuesta${i}" placeholder="Escribe una respuesta..." class="form-input" style="flex: 1;">
                                <button onclick="enviarrespuesta('${comentario.usuario}','${comentario.comentario}','${i}')" class="btn btn-primary">
                                    Enviar
                                </button>
                            </div>
                        </div>
                    `;
                }

                i++;
                
                for (let respuesta of respuestas) {
                    if (respuesta.comentario === comentario.comentario && 
                        respuesta.usuario_al_que_se_responde === comentario.usuario && 
                        respuesta.producto_id == "<%= id %>") {
                        comentariodiv.innerHTML += `
                            <div class="reply">
                                <p style="color: var(--accent);">Respuesta: ${respuesta.respuesta}, @${respuesta.usuario_al_que_se_responde}</p>
                            </div>
                        `;
                    }
                }
            }
        }

        window.enviar = async function enviar() {
            let url = await fetch("/editarnombre", {
                method: "post",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({
                    nombre: id,
                    nombreeditado: document.getElementById("editarnombre").value
                })
            });
            let data = await url.json();
            window.location.href = `/producto/${data.nombreeditado}`;
        }

        window.enviardescripcion = async function enviardescripcion() {
            let url = await fetch("/editardescripcion", {
                method: "post",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({
                    descripcion: document.getElementById("descripcion").textContent,
                    descripcioneditada: document.getElementById("editardescripcion").value,
                    nombre: id
                })
            });
           // let data = await url.json();
            document.getElementById("descripcion").textContent = document.getElementById("editardescripcion").value;
        }

        window.enviarprecio = async function enviarprecio() {
            let url = await fetch("/editarprecio", {
                method: "post",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({
                    precio: document.getElementById("precio").textContent,
                    precioeditado: document.getElementById("editarprecio").value,
                    nombre: id
                })
            });
            //let data = await url.json();
            document.getElementById("precio").textContent ="precio: "+ document.getElementById("editarprecio").value;
        }

        window.stock = async function stock() {
            document.getElementById("stock").textContent ="stock: "+document.getElementById("editarstock").value;
            await fetch("/editar-stock", {
                method: "POST",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({
                    producto: "<%= id %>",
                    stock: document.getElementById("editarstock").value
                })
            });
        }

        function mostrarproductos(producto) {
            let contenedor = document.getElementById("contenedor");
            let nombre = producto.producto_nombre;
            let precio = "precio: " + producto.producto_precio;
            let descripcion = producto.producto_descripcion;
            let stock = "stock: " + producto.producto_stock;

            // Procesar todas las im√°genes
            productImages = [];
            
            if (producto.producto_imagen) {
                if (Array.isArray(producto.producto_imagen)) {
                    producto.producto_imagen.forEach(img => {
                        if (img.filename) {
                            productImages.push(`/${img.filename}`);
                        } else if (typeof img === 'string') {
                            productImages.push(img.startsWith('/') ? img : `/${img}`);
                        }
                    });
                } else if (typeof producto.producto_imagen === 'string') {
                    productImages.push(producto.producto_imagen.startsWith('/') ? producto.producto_imagen : `/${producto.producto_imagen}`);
                }
            }

            // Si no hay im√°genes, usar placeholder
            if (productImages.length === 0) {
                productImages.push('/placeholder.png');
            }

            // Crear galer√≠a de im√°genes
            let galleryHTML = `
                <div class="product-images-container">
                    <div class="main-image-container">
                        <img src="${productImages[0]}" alt="${nombre}" class="product-image" id="main-image">
                        ${productImages.length > 1 ? `
                            <div class="image-nav prev" onclick="prevImage()">‚Äπ</div>
                            <div class="image-nav next" onclick="nextImage()">‚Ä∫</div>
                            <div class="image-count" id="image-count">1/${productImages.length}</div>
                        ` : ''}
                    </div>
            `;

            // Agregar thumbnails si hay m√°s de una imagen
            if (productImages.length > 1) {
                galleryHTML += '<div class="thumbnails-container">';
                productImages.forEach((imgSrc, index) => {
                    galleryHTML += `
                        <div class="thumbnail ${index === 0 ? 'active' : ''}" onclick="changeImage(${index})">
                            <img src="${imgSrc}" alt="${nombre} ${index + 1}">
                        </div>
                    `;
                });
                galleryHTML += '</div>';
            }

            galleryHTML += '</div>';

            contenedor.innerHTML = `
                ${galleryHTML}
                <h3 class="product-name" id="nombre">${nombre}</h3>
                <p class="product-price" id="precio">${precio}</p>
                <p class="product-desc" id="descripcion">${descripcion}</p>
                <p class="product-stock" id="stock">${stock}</p>
            `;

            // Hacer las funciones globales
            window.changeImage = changeImage;
            window.nextImage = nextImage;
            window.prevImage = prevImage;
        }

        console.log(id);
        console.log(productos);
        
        function mostrarproducto() {
            for (let producto of productos) {
                console.log(producto);
                if (producto.producto_id == "<%= id %>") {
                    console.log(producto);
                    mostrarproductos(producto);
                }
            }
        }

        mostrarproducto();

        window.borrarproducto = async function borrarproducto() {
            if (confirm('¬øEst√°s seguro de que deseas eliminar este producto?')) {
                await fetch("/borrarproducto", {
                    method: "POST",
                    headers: {"Content-Type": "application/json"},
                    body: JSON.stringify({
                        producto_id: "<%= id %>"
                    })
                });
                window.location.href = "/tienda/admin";
            }
        }
    </script>
</body>
</html>
