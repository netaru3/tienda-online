            <button onclick="buscador()" class="btn-search">Buscar</button>
        </div>
        
        <p class="welcome-subtitle">Descubre los mejores productos seleccionados para ti</p>
    </section>

    <div class="products-container">
        <div class="products-grid" id="contenedor"></div>
    </div>

    <script type="module">
        // ---------- declaraci贸n de variables ------------
        let i = 0;
        let a = 0;
        let nombre = "<%= nombre %>";

        let notificaciones1 = await fetch("/notificaciones-comprador")
            .then(res => res.json());
        
        // Agregar ID 煤nico a cada notificaci贸n
        notificaciones1 = notificaciones1.map((notif, index) => ({
            ...notif,
            _uniqueId: `notif-${Date.now()}-${index}`
        }));
        
        let productos = await fetch("/verproductos")
            .then(res => res.json());

        // -------------- declaraci贸n de funciones -------------------
        window.removeNotification = async function removeNotification(id) { 
            await fetch("/borrar-notificacion-comprador",{method:"POST",
                headers:{"Content-Type":"application/json"},
                    body: JSON.stringify({id:id})
                })
            const notificationElement = document.querySelector(`[data-notification-id="${id}"]`);
            if (notificationElement) {
                // Agregar animaci贸n de salida
                notificationElement.classList.add('removing');
                
                // Despu茅s de la animaci贸n, remover el elemento del DOM
                setTimeout(() => {
                    notificationElement.remove();
                    
                    // Eliminar del array
                    notificaciones1 = notificaciones1.filter(n => n._id !==id);
                    
                    // Si no quedan notificaciones para este usuario, mostrar estado vac铆o
                    const userNotifications = notificaciones1.filter(n => n.usuario === nombre);
                    if (userNotifications.length === 0) {
                        const div = document.getElementById("notif-content");
                        div.innerHTML = `
                            <div class="empty-notifications">
                                <p style="font-size: 2rem; margin-bottom: 0.5rem;"></p>
                                <p>No tienes notificaciones</p>
                            </div>
                        `;
                    }
                }, 300);
            }
        }

        window.buscador = function buscador() {
            const contenedor = document.getElementById("contenedor");
            const searchTerm = document.getElementById("buscador").value.toLowerCase().trim();
            contenedor.innerHTML = "";
            
            if (!searchTerm) {
                // Si el buscador est谩 vac铆o, mostrar todos los productos
                let i = 0;
                while (i < productos.length) {
                    mostrarproductos(i);
                    i++;
                }
                return;
            }
            
            let z = 0;
            let found = false;
            console.log("productos length:", productos.length);
            
            while (z < productos.length) {
                console.log(z);
                try {
                    if (productos[z].producto_nombre && 
                        productos[z].producto_nombre.toLowerCase().includes(searchTerm)) {
                        mostrarproductos(z);
                        found = true;
                    }
                } catch(error) {
                    console.log("error:", error);
                }
                z++;
            }
            
            if (!found) {
                contenedor.innerHTML = `
                    <div class="no-results">
                        <p style="font-size: 3rem; margin-bottom: 1rem;"></p>
                        <p>No se encontr贸 ning煤n producto con "${document.getElementById("buscador").value}"</p>
                        <button onclick="resetSearch()" class="btn btn-primary" style="margin-top: 1.5rem;">
                            Ver todos los productos
                        </button>
                    </div>
                `;
            }
        }

        window.resetSearch = function resetSearch() {
            document.getElementById("buscador").value = "";
            buscador();
        }

        window.notificaciones = async function notificaciones() {
           
            const div = document.getElementById("notif-content");
            const panel = document.getElementById("notificaciones");
            const overlay = document.getElementById("overlay");
            
            if (a === 0) {
                div.innerHTML = "";
                const userNotifications = notificaciones1.filter(n => n.usuario === nombre);
                
                if (userNotifications.length === 0) {
                    div.innerHTML = `
                        <div class="empty-notifications">
                            <p style="font-size: 2rem; margin-bottom: 0.5rem;"></p>
                            <p>No tienes notificaciones</p>
                        </div>
                    `;
                } else {
                    userNotifications.forEach(notificacion => {
                        if(notificacion.show!==false){   div.innerHTML += `
                            <div class="notification-item" data-notification-id="${notificacion._id}">
                                <p>${notificacion.notificacion}</p>
                                <button class="close-notification-btn" onclick="removeNotification('${notificacion._id}')" title="Eliminar notificaci贸n"></button>
                            </div>
                        `;}
                     
                    });
                }
                panel.classList.add('active');
                overlay.classList.add('active');
                a = 1;
            } else {
                cerrarNotificaciones();
            }
        }

        window.cerrarNotificaciones = function cerrarNotificaciones() {
            const panel = document.getElementById("notificaciones");
            const overlay = document.getElementById("overlay");
            panel.classList.remove('active');
            overlay.classList.remove('active');
            a = 0;
        }

        window.redireccionarregistro = function redireccionarregistro() {
            window.location.href = "/";
        }

        window.redireccionarlogin = function redireccionarlogin() {
            window.location.href = "/data";
        }

        window.cerrarsesion = async function cerrarsesion() {
            await fetch(`/tienda/cerrarsesion`);
            window.location.href = "/data";
        }

        function mostrarproductos(i) {
            if (productos[i].null === false) {
                const nombre = productos[i].producto_nombre;
                const precio = productos[i].producto_precio;
                const descripcion = productos[i].producto_descripcion;
                const contenedor = document.getElementById("contenedor");
                
                let imagenSrc = '';
                
                // Manejo m谩s robusto de im谩genes
                if (productos[i].producto_imagen) {
                    if (Array.isArray(productos[i].producto_imagen) && productos[i].producto_imagen.length > 0) {
                        // Si es un array de im谩genes
                        if (productos[i].producto_imagen[0].filename) {
                            imagenSrc = `/${productos[i].producto_imagen[0].filename}`;
                        } else if (typeof productos[i].producto_imagen[0] === 'string') {
                            imagenSrc = `/${productos[i].producto_imagen[0]}`;
                        }
                    } else if (typeof productos[i].producto_imagen === 'string') {
                        // Si es una string directa
                        imagenSrc = productos[i].producto_imagen.startsWith('/') 
                            ? productos[i].producto_imagen 
                            : `/${productos[i].producto_imagen}`;
                    }
                }
                
                // Imagen por defecto si no hay imagen
                if (!imagenSrc) {
                    imagenSrc = '/placeholder.png';
                }

                const card = `
                    <div class="product-card" style="animation-delay: ${i * 0.05}s">
                        <a href="/producto/${encodeURIComponent(nombre)}/${i + 1}">
                            <div class="product-image-container">
                                <img 
                                    src="${imagenSrc}" 
                                    alt="${nombre}" 
                                    class="product-image"
                                    loading="lazy"
                                    onerror="this.onerror=null; this.src='/placeholder.png'; this.style.objectFit='contain';"
                                >
                            </div>
                        </a>
                        <div class="product-body">
                            <a href="/producto/${encodeURIComponent(nombre)}/${i + 1}" class="product-name">
                                ${nombre}
                            </a>
                            <div class="product-description">
                                ${descripcion}
                            </div>
                            <div class="product-price">${precio}</div>
                        </div>
                        <p class="hidden" id="id">${i + 1}</p>
                    </div>
                `;
                
                contenedor.innerHTML += card;
            }
        }

        // ------------ codigo -----------------
        if (nombre === "undefined") {
            nombre = "visitante";
        }
        
        if (nombre === "visitante") {
            document.getElementById("sesion").remove();
        }
        
        document.getElementById("bienvenida").textContent += " " + nombre;

        if (nombre !== "visitante") {
            document.getElementById("login").remove();
            document.getElementById("registro").remove();
        }

        while (i < productos.length) {
            mostrarproductos(i);
            i++;
        }
    </script>
</body>
