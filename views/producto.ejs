<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Producto - Detalles</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;600;700&family=Outfit:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #0A0E27;
            --primary-light: #1A1F3A;
            --accent: #00D9FF;
            --accent-secondary: #8A2BE2;
            --accent-glow: rgba(0, 217, 255, 0.3);
            --text: #E8E8E8;
            --text-dim: #A0A0A0;
            --bg: #050816;
            --card-bg: #0F1428;
            --border: rgba(0, 217, 255, 0.2);
            --shadow: rgba(0, 217, 255, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 30%, rgba(0, 217, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(138, 43, 226, 0.1) 0%, transparent 50%);
            pointer-events: none;
            z-index: 0;
        }

        .container {
            position: relative;
            z-index: 1;
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 5%;
        }

        /* Back button */
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.7rem 1.2rem;
            background: var(--card-bg);
            color: var(--text);
            border: 1px solid var(--border);
            border-radius: 8px;
            text-decoration: none;
            font-size: 0.9rem;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: var(--primary-light);
            border-color: var(--accent);
            transform: translateX(-4px);
        }

        /* Product layout */
        .product-layout {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            margin-bottom: 4rem;
            animation: fadeInUp 0.6s ease;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Image gallery */
        .image-gallery {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 2rem;
            position: sticky;
            top: 2rem;
        }

        .main-image-container {
            width: 100%;
            aspect-ratio: 1;
            overflow: hidden;
            border-radius: 12px;
            margin-bottom: 1rem;
            position: relative;
            background: var(--primary);
        }

        .main-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            cursor: zoom-in;
            transition: transform 0.3s ease;
        }

        .main-image:hover {
            transform: scale(1.05);
        }

        /* Thumbnails */
        .thumbnails-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
            gap: 0.8rem;
            margin-top: 1rem;
        }

        .thumbnail {
            aspect-ratio: 1;
            border-radius: 8px;
            overflow: hidden;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            position: relative;
        }

        .thumbnail:hover {
            border-color: var(--accent);
            transform: scale(1.05);
        }

        .thumbnail.active {
            border-color: var(--accent);
            box-shadow: 0 0 15px var(--accent-glow);
        }

        .thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .image-count {
            position: absolute;
            bottom: 0.5rem;
            right: 0.5rem;
            background: rgba(0, 0, 0, 0.7);
            color: var(--text);
            padding: 0.3rem 0.6rem;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        /* Navigation arrows for images */
        .image-nav {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.5);
            color: var(--text);
            border: 1px solid var(--border);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 10;
        }

        .image-nav:hover {
            background: var(--accent);
            color: var(--primary);
            border-color: var(--accent);
        }

        .image-nav.prev {
            left: 1rem;
        }

        .image-nav.next {
            right: 1rem;
        }

        /* Product info */
        .product-info {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .product-title {
            font-family: 'Sora', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--text), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            line-height: 1.2;
        }

        .product-price-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .product-price {
            font-family: 'Sora', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--accent);
        }

        .stock-badge {
            padding: 0.5rem 1rem;
            background: rgba(0, 255, 136, 0.1);
            color: #00FF88;
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .stock-badge.out {
            background: rgba(255, 68, 68, 0.1);
            color: #FF4444;
            border-color: rgba(255, 68, 68, 0.3);
        }

        .product-description {
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--text-dim);
            padding: 1.5rem;
            background: var(--card-bg);
            border-left: 3px solid var(--accent);
            border-radius: 8px;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .btn {
            padding: 1rem 2rem;
            border: none;
            border-radius: 10px;
            font-family: 'Outfit', sans-serif;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn:active::before {
            width: 400px;
            height: 400px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--accent), #0099CC);
            color: var(--primary);
            box-shadow: 0 4px 15px var(--shadow);
            flex: 1;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px var(--accent-glow);
        }

        .btn-secondary {
            background: var(--card-bg);
            color: var(--text);
            border: 1px solid var(--border);
        }

        .btn-secondary:hover {
            background: var(--primary-light);
            border-color: var(--accent);
        }

        /* Comments section */
        .comments-section {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 2rem;
            animation: fadeInUp 0.8s ease 0.2s backwards;
        }

        .comments-title {
            font-family: 'Sora', sans-serif;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: var(--text);
        }

        .comment-form {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .comment-input {
            flex: 1;
            padding: 1rem 1.5rem;
            background: var(--primary);
            border: 1px solid var(--border);
            border-radius: 10px;
            color: var(--text);
            font-family: 'Outfit', sans-serif;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .comment-input:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 3px var(--shadow);
        }

        .comment-input::placeholder {
            color: var(--text-dim);
        }

        .comment {
            background: var(--primary);
            padding: 1.5rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            border-left: 3px solid var(--accent);
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .comment-author {
            font-weight: 600;
            color: var(--accent);
            margin-bottom: 0.5rem;
        }

        .comment-text {
            color: var(--text-dim);
            line-height: 1.6;
            margin-bottom: 0.5rem;
        }

        .comment-reply {
            margin-top: 0.8rem;
            padding-left: 1.5rem;
            border-left: 2px solid var(--border);
        }

        .reply-badge {
            display: inline-block;
            padding: 0.2rem 0.6rem;
            background: rgba(138, 43, 226, 0.2);
            color: var(--accent-secondary);
            border-radius: 4px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        /* Responsive */
        @media (max-width: 968px) {
            .product-layout {
                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .image-gallery {
                position: relative;
                top: 0;
            }

            .product-title {
                font-size: 2rem;
            }

            .product-price {
                font-size: 2rem;
            }

            .thumbnails-container {
                grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
            }
        }

        @media (max-width: 640px) {
            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }

            .comment-form {
                flex-direction: column;
            }

            .image-nav {
                width: 35px;
                height: 35px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/tienda" class="back-btn">
            ‚Üê Volver a la tienda
        </a>

        <div class="product-layout">
            <div class="image-gallery" id="contenedor"></div>
            
            <div class="product-info" id="product-info"></div>
        </div>

        <div class="comments-section">
            <h2 class="comments-title">Comentarios</h2>
            
            <div class="comment-form">
                <input type="text" placeholder="Escribe un comentario..." id="comentario" class="comment-input">
                <button onclick="enviarcomentarios()" class="btn btn-primary">Enviar</button>
            </div>
            
            <div id="comentarios"></div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script type="module">
        // ----------- declaraci√≥n de variables ---------------
        let i = 0;
        let respuestas = [];
        let id = "<%= id %>";
        let usuario = "<%= usuario %>";
        let socket = io();
        let productos = await fetch("/verproductos").then(res => res.json());
        let currentImageIndex = 0;
        let productImages = [];

        // --------------- declaraci√≥n de funciones ------------------
        function mostrarcomentarios(comentarios) {
            console.log(respuestas);
            const comentariodiv = document.getElementById("comentarios");
            comentariodiv.innerHTML = "";

            for (let comentario of comentarios) {
                if (comentario.producto_id == "<%= id %>") {
                    comentariodiv.innerHTML += `
                        <div class="comment">
                            <div class="comment-author">${comentario.usuario} dice:</div>
                            <div class="comment-text">${comentario.comentario}</div>
                        </div>
                    `;

                    for (let respuesta of respuestas) {
                        if (respuesta.comentario === comentario.comentario && 
                            respuesta.usuario_al_que_se_responde === comentario.usuario && 
                            respuesta.producto_id == "<%= id %>") {
                            comentariodiv.innerHTML += `
                                <div class="comment-reply">
                                    <span class="reply-badge">Respuesta</span>
                                    <div class="comment-text">
                                        ${respuesta.respuesta} <span style="color: var(--accent);">@${respuesta.usuario_al_que_se_responde}</span>
                                    </div>
                                </div>
                            `;
                        }
                    }
                }
            }
        }

        window.enviarcomentarios = async function enviarcomentarios() {
            await fetch("/comentarios", {
                method: "POST",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({
                    usuario: usuario,
                    comentario: document.getElementById("comentario").value,
                    producto: "<%= nombre %>",
                    producto_id: id
                })
            })
            .then(res => res.text())
            .then(res => {
                if (res === "los visitantes no pueden comentar") {
                    alert(res);
                } else {
                    document.getElementById("comentario").value = "";
                }
            });
        }

        window.comprobar = async function comprobar() {
            await fetch("/comprobar-usuario", {
                method: "POST",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({producto: "<%= nombre %>"})
            })
            .then(res => res.text())
            .then(async res => {
                if (res === "ingrese sesion para comprar") {
                    alert(res);
                } else if (Number(document.getElementById("stock").textContent) === 0) {
                    alert("Stock vac√≠o");
                } else if (res === "ok" && Number(document.getElementById("stock").textContent) > 0) {
                    let stock = Number(document.getElementById("stock").textContent);
                    document.getElementById("stock").textContent = stock - 1;
                    
                    await fetch("/comprar")
                        .then(data => data.json())
                        .then(data => window.location.href = data.init_point);
                }
            });
        }

        function changeImage(index) {
            currentImageIndex = index;
            const mainImage = document.getElementById('main-image');
            mainImage.src = productImages[index];
            
            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach((thumb, i) => {
                if (i === index) {
                    thumb.classList.add('active');
                } else {
                    thumb.classList.remove('active');
                }
            });
        }

        function nextImage() {
            currentImageIndex = (currentImageIndex + 1) % productImages.length;
            changeImage(currentImageIndex);
        }

        function prevImage() {
            currentImageIndex = (currentImageIndex - 1 + productImages.length) % productImages.length;
            changeImage(currentImageIndex);
        }

        function mostrarproductos(producto) {
            const contenedor = document.getElementById("contenedor");
            const productInfo = document.getElementById("product-info");
            const nombre = producto.producto_nombre;
            const precio = producto.producto_precio;
            const descripcion = producto.producto_descripcion;
            const stock = producto.producto_stock;

            // Procesar todas las im√°genes
            productImages = [];
            
            if (producto.producto_imagen) {
                if (Array.isArray(producto.producto_imagen)) {
                    // Si es un array de objetos con filename
                    producto.producto_imagen.forEach(img => {
                        if (img.filename) {
                            productImages.push(`/${img.filename}`);
                        } else if (typeof img === 'string') {
                            productImages.push(img.startsWith('/') ? img : `/${img}`);
                        }
                    });
                } else if (typeof producto.producto_imagen === 'string') {
                    // Si es una sola imagen como string
                    productImages.push(producto.producto_imagen.startsWith('/') ? producto.producto_imagen : `/${producto.producto_imagen}`);
                }
            }

            // Si no hay im√°genes, usar placeholder
            if (productImages.length === 0) {
                productImages.push('/placeholder.png');
            }

            // Crear galer√≠a de im√°genes
            let galleryHTML = `
                <div class="main-image-container">
                    <img src="${productImages[0]}" alt="${nombre}" class="main-image" id="main-image">
                    ${productImages.length > 1 ? `
                        <div class="image-nav prev" onclick="prevImage()">‚Äπ</div>
                        <div class="image-nav next" onclick="nextImage()">‚Ä∫</div>
                        <div class="image-count">${currentImageIndex + 1}/${productImages.length}</div>
                    ` : ''}
                </div>
            `;

            // Agregar thumbnails si hay m√°s de una imagen
            if (productImages.length > 1) {
                galleryHTML += '<div class="thumbnails-container">';
                productImages.forEach((imgSrc, index) => {
                    galleryHTML += `
                        <div class="thumbnail ${index === 0 ? 'active' : ''}" onclick="changeImage(${index})">
                            <img src="${imgSrc}" alt="${nombre} ${index + 1}">
                        </div>
                    `;
                });
                galleryHTML += '</div>';
            }

            contenedor.innerHTML = galleryHTML;

            // Product info
            const stockClass = stock > 0 ? '' : 'out';
            const stockText = stock > 0 ? `Stock: ${stock}` : 'Sin stock';
            
            productInfo.innerHTML = `
                <h1 class="product-title">${nombre}</h1>
                
                <div class="product-price-section">
                    <div class="product-price">${precio}</div>
                    <div class="stock-badge ${stockClass}" id="stock-badge">
                        ${stockText}
                    </div>
                </div>
                <p hidden id="stock">${stock}</p>
                
                <div class="product-description">${descripcion}</div>
                
                <div class="action-buttons">
                    <button onclick="comprobar()" class="btn btn-primary">
                        üõí Comprar Ahora
                    </button>
                    <button onclick="window.location.href='/mensajeria/<%= usuario %>'" class="btn btn-secondary">
                        üí¨ Contactar Vendedor
                    </button>
                </div>
            `;

            // Actualizar contador de im√°genes cuando se cambia
            window.changeImage = changeImage;
            window.nextImage = nextImage;
            window.prevImage = prevImage;
        }

        // ------- c√≥digo ---------
        for (let producto of productos) {
            if (producto.producto_id == id) {
                console.log(producto);
                mostrarproductos(producto);
            }
        }

        // -------- websocket ----------
        socket.on("respuestas", function(respuestasdata) {
            respuestas = respuestasdata;
            console.log("respuestas", respuestas);
        });

        socket.on("comentarios", function(comentarios) {
            let intervalId = setInterval(() => {
                if (respuestas.length !== 0) {
                    mostrarcomentarios(comentarios);
                    clearInterval(intervalId);
                }
            }, 100);
        });
    </script>
</body>
</html>
